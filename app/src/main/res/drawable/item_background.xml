<?xml version="1.0" encoding="utf-8"?>
<!-- Define una forma rectangular con esquinas redondeadas y un borde -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo. ?attr/colorSurfaceContainer se adapta al tema claro/oscuro -->
    <solid android:color="?attr/colorSurfaceContainer" />

    <!-- Radio de las esquinas para hacerlas redondeadas -->
    <corners android:radius="12dp" />

    <!-- Un borde delgado alrededor de la forma -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />

</shape>
    